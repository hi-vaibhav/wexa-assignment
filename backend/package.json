{
    "name": "helpdesk-backend",
    "version": "1.0.0",
    "description": "Smart Helpdesk Backend with Agentic Triage",
    "main": "src/server.js",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --detectOpenHandles",
        "seed": "node src/scripts/seed.js",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix"
    },
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^8.0.3",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "joi": "^17.11.0",
        "zod": "^3.22.4",
        "winston": "^3.11.0",
        "bullmq": "^4.15.4",
        "ioredis": "^5.3.2",
        "uuid": "^9.0.1",
        "dotenv": "^16.3.1",
        "compression": "^1.7.4",
        "express-async-errors": "^3.1.1"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "@types/jest": "^29.5.8",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "prettier": "^3.1.0"
    },
    "jest": {
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/__tests__/setup.js"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "src/**/*.js",
            "!src/__tests__/**",
            "!src/scripts/**"
        ]
    }
}